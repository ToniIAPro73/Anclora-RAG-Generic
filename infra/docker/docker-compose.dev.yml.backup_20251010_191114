services:
  postgres:
    image: postgres:15-alpine
    container_name: anclora_postgres
    environment:
      POSTGRES_DB: anclora_rag
      POSTGRES_USER: anclora_user
      POSTGRES_PASSWORD: anclora_pass_dev
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U anclora_user -d anclora_rag"]
      interval: 10s
      timeout: 5s
      retries: 5

  qdrant:
    image: qdrant/qdrant:v1.7.4
    ports:
      - "6333:6333"
      - "6334:6334"
    environment:
      - QDRANT__SERVICE__GRPC_PORT=6334
    volumes:
      - qdrant_data:/qdrant/storage

  redis:
    image: redis:7.2-alpine
    command: redis-server --appendonly yes
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

  ollama:
    image: ollama/ollama:latest
    ports:
      - "11434:11434"
    volumes:
      - ollama_data:/root/.ollama

  api:
    build:
      context: ../../apps/api
      dockerfile: Dockerfile
    env_file:
      - "../../.env"
    environment:
      - DATABASE_URL=postgresql://anclora_user:anclora_pass_dev@postgres:5432/anclora_rag
    volumes:
      - ../../apps/api:/app
      - ../../packages:/packages
      - ../../models:/models
      - ${USERPROFILE}/.cache/huggingface:/root/.cache/huggingface
    depends_on:
      postgres:
        condition: service_healthy
      qdrant:
        condition: service_started
      redis:
        condition: service_started
      ollama:
        condition: service_started
    ports:
      - "8000:8000"
    command: uvicorn main:app --host 0.0.0.0 --port 8000 --reload

  worker:
    build:
      context: ../../apps/api
      dockerfile: Dockerfile
    environment:
      - REDIS_URL=redis://redis:6379
      - DATABASE_URL=postgresql://anclora_user:anclora_pass_dev@postgres:5432/anclora_rag
    volumes:
      - ../../apps/api:/app
      - ../../packages:/packages
      - ../../models:/models
      - ${USERPROFILE}/.cache/huggingface:/root/.cache/huggingface
    depends_on:
      - redis
      - postgres
      - qdrant
    command: rq worker ingestion_queue --url redis://redis:6379

volumes:
  postgres_data:
  qdrant_data:
  redis_data:
  ollama_data:
